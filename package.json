{
  "name": "@eva-ui/monorepo",
  "version": "1.0.0",
  "description": "eva",
  "packageManager": "pnpm@7",
  "scripts": {
    "dev": "pnpm run stub",
    "docs": "pnpm -C /packages/docs run dev",
    "docs:build": "pnpm -C docs run build",
    "stub": "pnpm -r --parallel -F \"./packages/{components,utils,eva-ui}\" run stub",
    "build": "rimraf packages/*/{dist,es,lib} && pnpm -r -F \"./packages/{utils,components}\" run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp package.json packages/**/package.json",
    "format": "prettier --write \"/**/*.{ts,tsx,vue}\"",
    "preinstall": "npx only-allow pnpm",
    "deploy": "pnpm run build && pnpm run docs:build",
    "test": "vitest",
    "test:ci": "pnpm install && pnpm run lint && pnpm run build && pnpm run test",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage"
  },
  "author": "cullyfung",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@iconify-json/carbon": "^1.1.11",
    "@iconify-json/fluent-emoji": "^1.1.7",
    "@iconify-json/logos": "^1.1.19",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.7.21",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vitejs/plugin-vue-jsx": "^2.0.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/test-utils": "^2.2.4",
    "@vueuse/core": "^9.6.0",
    "babel-eslint": "^10.1.0",
    "bumpp": "^8.2.1",
    "eslint": "^8.28.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.8.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.0",
    "jsdom": "^20.0.3",
    "pathe": "^1.0.0",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "terser": "^5.16.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3",
    "unbuild": "^1.0.1",
    "unocss": "^0.45.23",
    "unplugin-auto-import": "^0.12.0",
    "unplugin-vue-components": "^0.22.11",
    "vite": "^3.1.3",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vitest": "^0.25.3",
    "vue": "^3.2.39",
    "vue-tsc": "^1.0.11"
  }
}
